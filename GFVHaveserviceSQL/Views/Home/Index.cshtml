@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "GFV Haveservice";
}

<div class="hero-image d-flex align-items-center">
    <div class="container hero-overlay text-center">
        <h1 class="display-4 fw-bold mb-4">@Localizer["Welcome"]</h1>
        <p class="lead mb-5">@Localizer["Tagline"]</p>
        <div class="d-flex flex-nowrap justify-content-center hero-buttons mb-4">
            <a class="btn btn-light btn-lg m-2" asp-controller="Home" asp-action="Private">@Localizer["Private"]</a>
            <a class="btn btn-light btn-lg m-2" asp-controller="Home" asp-action="Business">@Localizer["Business"]</a>
            <a class="btn btn-light btn-lg m-2" asp-controller="Home" asp-action="Housing">@Localizer["Housing"]</a>
        </div>
        <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Contact">@Localizer["Contact"]</a>
    </div>
</div>

<section class="features-alt py-5 text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <i class="bi bi-tree-fill feature-icon text-success mb-3"></i>
                <h3 class="fw-normal">@Localizer["Gardening"]</h3>
                <p>@Localizer["GardeningDesc"]</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="bi bi-lightbulb-fill feature-icon text-success mb-3"></i>
                <h3 class="fw-normal">@Localizer["Consulting"]</h3>
                <p>@Localizer["ConsultingDesc"]</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="bi bi-wrench-adjustable-circle-fill feature-icon text-success mb-3"></i>
                <h3 class="fw-normal">@Localizer["Maintenance"]</h3>
                <p>@Localizer["MaintenanceDesc"]</p>
            </div>
        </div>
    </div>
</section>
