@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model GFVHaveserviceSQL.Models.ContactFormModel
@{
    ViewData["Title"] = Localizer["Contact"];
}
<h2>@Localizer["Contact"]</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="Contact" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlaceOfWork"></label>
        <input asp-for="PlaceOfWork" class="form-control" />
        <span asp-validation-for="PlaceOfWork" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">@Localizer["Send"]</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
