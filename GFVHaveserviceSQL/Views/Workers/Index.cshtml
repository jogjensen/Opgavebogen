@model IEnumerable<GFVHaveserviceSQL.Models.ApplicationUser>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h2>@Localizer["Workers"]</h2>
<p><a asp-action="Create">@Localizer["CreateNewWorker"]</a></p>
<table class="table table-striped table-hover">
    <tr>
        <th>@Localizer["Name"]</th>
        <th>@Localizer["Email"]</th>
        <th>@Localizer["Phone"]</th>
        <th></th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td><a asp-action="Details" asp-route-id="@item.Id">@item.Name</a></td>
        <td>@item.Email</td>
        <td>@item.PhoneNumber</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
        </td>
    </tr>
}
</table>
