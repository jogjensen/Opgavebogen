@model GFVHaveserviceSQL.Models.ApplicationUser
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h2>@Localizer["WorkerDetails"]</h2>
<div>
    <h4>@Model.Name</h4>
    <p>@Localizer["Email"]: @Model.Email</p>
    <p>@Localizer["Phone"]: @Model.PhoneNumber</p>
</div>
<h3>@Localizer["AssignedTasks"]</h3>
<table class="table table-striped table-hover">
    <tr>
        <th>
            <a asp-action="Details" asp-route-id="@Model.Id" asp-route-sortOrder="@ViewBag.NameSortParm">@Localizer["Name"]</a>
        </th>
        <th>@Localizer["Customer"]</th>
        <th>
            <a asp-action="Details" asp-route-id="@Model.Id" asp-route-sortOrder="@ViewBag.ScheduledSortParm">@Localizer["Scheduled"]</a>
        </th>
        <th>@Localizer["Id"]</th>
    </tr>
@foreach (var task in Model.Tasks)
{
    <tr>
        <td>@task.Name</td>
        <td>@task.Customer?.Name</td>
        <td>@task.ScheduledDate?.ToString("yyyy-MM-dd HH:mm")</td>
        <td>@task.PublicId</td>
    </tr>
}
</table>
