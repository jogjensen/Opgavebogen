@model GFVHaveserviceSQL.Models.ApplicationUser
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h2>@Localizer["EditWorker"]</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>@Localizer["Name"]</label>
        <input name="name" value="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>@Localizer["Email"]</label>
        <input name="email" value="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>@Localizer["Phone"]</label>
        <input name="phone" value="@Model.PhoneNumber" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
</form>
